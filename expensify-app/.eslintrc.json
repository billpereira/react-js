{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["prettier", "prettier/react"],
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018
	},
	"plugins": ["react"],
	"rules": {
		"indent": ["error", 2],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"]
	}
}
